<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import com.jfoenix.controls.*?>
<?import org.kordamp.ikonli.javafx.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.audioflow.controller.PlaylistManagerController"
      fx:id="rootPane"
      styleClass="playlist-manager-root"
      stylesheets="@../styles/application.css"
      spacing="0">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="15" styleClass="manager-header">
        <padding>
            <Insets top="20" right="20" bottom="15" left="20"/>
        </padding>
        
        <FontIcon iconLiteral="fas-list-ul" iconSize="24" styleClass="header-icon"/>
        <Label text="Gestor de Playlists" styleClass="manager-title"/>
        
        <Region HBox.hgrow="ALWAYS"/>
        
        <!-- Botón crear nueva playlist -->
        <JFXButton fx:id="newPlaylistBtn" onAction="#handleNewPlaylist" styleClass="primary-btn">
            <graphic>
                <HBox alignment="CENTER" spacing="8">
                    <FontIcon iconLiteral="fas-plus" iconSize="14"/>
                    <Label text="Nueva Playlist" styleClass="btn-label"/>
                </HBox>
            </graphic>
        </JFXButton>
    </HBox>

    <Separator styleClass="header-separator"/>

    <!-- Contenido principal -->
    <SplitPane fx:id="splitPane" dividerPositions="0.35" VBox.vgrow="ALWAYS">
        
        <!-- Panel izquierdo: Lista de playlists -->
        <VBox styleClass="playlists-panel" minWidth="200">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            
            <Label text="Mis Playlists" styleClass="section-title"/>
            
            <JFXListView fx:id="playlistListView" styleClass="playlist-list" VBox.vgrow="ALWAYS">
            </JFXListView>
        </VBox>

        <!-- Panel derecho: Canciones de la playlist seleccionada -->
        <VBox styleClass="songs-panel" minWidth="300">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            
            <!-- Info de playlist seleccionada -->
            <HBox alignment="CENTER_LEFT" spacing="15" styleClass="playlist-info">
                <StackPane styleClass="playlist-icon-container" minWidth="60" minHeight="60">
                    <FontIcon iconLiteral="fas-music" iconSize="24" styleClass="playlist-icon"/>
                </StackPane>
                
                <VBox spacing="4">
                    <Label fx:id="selectedPlaylistName" text="Selecciona una playlist" styleClass="playlist-name-label"/>
                    <Label fx:id="songCountLabel" text="0 canciones" styleClass="song-count-label"/>
                </VBox>
                
                <Region HBox.hgrow="ALWAYS"/>
                
                <JFXButton fx:id="playAllBtn" onAction="#handlePlayAll" styleClass="play-all-btn">
                    <graphic>
                        <FontIcon iconLiteral="fas-play" iconSize="16"/>
                    </graphic>
                </JFXButton>
            </HBox>

            <Separator/>

            <!-- Área de arrastrar para agregar canciones -->
            <VBox fx:id="dropZone" styleClass="drop-zone-small" alignment="CENTER" spacing="8">
                <FontIcon iconLiteral="fas-plus-circle" iconSize="20" styleClass="drop-icon-small"/>
                <Label text="Arrastra canciones aquí" styleClass="drop-hint-small"/>
            </VBox>

            <!-- Lista de canciones (con drag & drop interno) -->
            <JFXListView fx:id="songsListView" styleClass="songs-list" VBox.vgrow="ALWAYS">
            </JFXListView>

        </VBox>
    </SplitPane>

    <!-- Diálogo modal para crear playlist (inicialmente oculto) -->
    <StackPane fx:id="dialogOverlay" styleClass="dialog-overlay" visible="false" managed="false">
        <VBox styleClass="dialog-box" alignment="CENTER" spacing="20" maxWidth="350">
            <padding>
                <Insets top="25" right="30" bottom="25" left="30"/>
            </padding>
            
            <Label text="Nueva Playlist" styleClass="dialog-title"/>
            
            <VBox spacing="8" alignment="CENTER_LEFT">
                <Label text="Nombre" styleClass="field-label"/>
                <JFXTextField fx:id="playlistNameField" promptText="Mi nueva playlist" styleClass="dialog-input"/>
                <Label fx:id="errorLabel" text="" styleClass="error-label" visible="false"/>
            </VBox>
            
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <JFXButton text="Cancelar" onAction="#handleCancelDialog" styleClass="dialog-btn-secondary"/>
                <JFXButton fx:id="createBtn" text="Crear" onAction="#handleCreatePlaylist" styleClass="dialog-btn-primary"/>
            </HBox>
        </VBox>
    </StackPane>

</VBox>
